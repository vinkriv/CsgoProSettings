<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a10017404.csgoprosettings.YourSettingsFragment">

    <!-- TODO: Update blank fragment layout -->
    <Button
    android:id="@+id/backbutton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:text="Back" />

    <TextView
        android:id="@+id/resolution"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="43dp"
        android:text="Resolution:"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/backbutton"
        android:layout_alignParentStart="true" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Stretched"
        android:textSize="20dp"
        android:layout_below="@+id/resolution"
        android:layout_alignStart="@+id/resolution" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/switch1"
        android:layout_below="@+id/switch1"
        android:layout_marginTop="19dp"
        android:text="Sensitivity: "
        android:textColor="@android:color/black"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/sensitivity"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_below="@+id/switch1"
        android:layout_toEndOf="@+id/switch1" />

    <EditText
        android:id="@+id/res1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/resolution"
        android:layout_toEndOf="@+id/switch1"
        android:layout_marginTop="49dp"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/res2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="number"
        android:layout_alignBaseline="@+id/res1"
        android:layout_alignBottom="@+id/res1"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/resolution"
        android:layout_alignBottom="@+id/resolution"
        android:layout_toEndOf="@+id/res1"
        android:text="X" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/sensitivity"
        android:layout_marginTop="20dp"
        android:text="DPI: "
        android:textColor="@android:color/black"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/dpi"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/sensitivity"
        android:layout_below="@+id/sensitivity"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/dpi"
        android:layout_below="@+id/dpi"
        android:layout_marginTop="60dp"
        android:text="SAVE" />


</RelativeLayout>
